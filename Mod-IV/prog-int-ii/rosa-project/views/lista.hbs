<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Produtos</title>
</head>
<body>
  <h1>Lista de Produtos</h1>
  <table class="produto-table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Status</th>
        <th>Destinação</th>
        <th>Taxa Adm</th>
        <th>Taxa Rent</th>
        <th>Prazo</th>
        <th>Vencimento</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      {{#each produtos}}
      <tr class="produto">
        <td>{{this.nome}}</td>
        <td>{{this.status}}</td>
        <td>{{this.destinacao}}</td>
        <td>{{this.taxa_administracao}}</td>
        <td>{{this.taxa_rentabilidade}}</td>
        <td>{{this.prazo}}</td>
        <td>{{this.vencimento}}</td>
        <td>
          <form class="btn-group" action="/produtos/mudar-status/{{this.id}}" method="post">
            <button type="submit" class="btn-action btn-mudar-status">Mudar status</button>
          </form>
          <form class="btn-group" action="/produtos/delete/{{this.id}}" method="post">
            <button type="submit" class="btn-action btn-delete">Deletar</button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</body>
</html>

<style>
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 20px;
}

h1 {
  text-align: center;
  margin-bottom: 20px;
}

.produto-table {
  width: 100%;
  border-collapse: collapse;
  border: 1px solid #ddd;
}

.produto-table th,
.produto-table td {
  padding: 10px;
  border: 1px solid #ddd;
  text-align: center;
}

.produto-table th {
  background-color: #f5f5f5;
}

.btn-action {
  background-color: #dc3545;
  color: #fff;
  padding: 5px 10px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.btn-group {
  display: inline-block;
  margin-right: 5px;
}

.btn-mudar-status {
  background-color: #17a2b8;
}
</style>
</html>
